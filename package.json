{
  "name": "appmaku",
  "version": "1.0.0",
  "description": "A landing page for appmaku",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass --watch sass/main.scss dist/styles/main.css",
    "devserver": "live-server --open='./dist/'",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss temp/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" temp/style.comp.css -o temp/style.prefix.css",
    "compress:css": "sass temp/style.prefix.css dist/styles/main.css --style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "deploy": "gh-pages -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Satx98/appmaku.github.io.git"
  },
  "author": "Satadru Roy",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Satx98/appmaku.github.io.git/issues"
  },
  "homepage": "https://satx98.github.io/appmaku.github.io/",
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "gh-pages": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^8.3.0",
    "sass": "^1.30.0"
  }
}
